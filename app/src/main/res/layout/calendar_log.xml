<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">


        <Button
            android:id="@+id/btnBackToHabitList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/txtTopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/btnBackToHabitList"
            android:text="习惯名"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnShare1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="309dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/btnBackToHabitList"
            android:background="@drawable/share"
            android:onClick="share" />
    </RelativeLayout>

    <GridView
        android:id="@+id/grid_date"
        android:layout_width="358dp"
        android:layout_height="358dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:numColumns="7"
        android:scrollbars="none" />

    <TextView
        android:text="打卡统计"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@color/light">
            <TextView
                android:id="@+id/LogPunched"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="1天"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textLogPunched"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="已打卡"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@color/light">
            <TextView
                android:id="@+id/LogContinuousPunched"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="1天"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textLogContinuousPunched"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="当前连续打卡"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@color/light">
            <TextView
                android:id="@+id/LogHighestPunched"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="1天"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textLogHighestPunched"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="最高连续打卡"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@color/light">
            <TextView
                android:id="@+id/LogCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="2021.5.21"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textLogCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="建立日期"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/btnEndHabit"
            android:text="结束习惯"
            android:background="@drawable/shape_finish"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:onClick="finishHabit"
            android:layout_width="323dp"
            android:layout_height="41dp"/>
    </LinearLayout>



</LinearLayout>